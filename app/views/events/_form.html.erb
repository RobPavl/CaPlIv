<%= form_for @event do |f| %>

  <div>
    <%= f.label :enter_time_of_begining %><br>
    <%= f.datetime_field :begin_time %>
  </div>

  <div>
    <%= f.label :enter_time_of_ending %><br>
    <%= f.datetime_field :end_time %>
  </div>

  <div>
    <%= f.label :enter_description %><br>
    <%= f.text_area :description  %>
  </div>

   <div>
    <%= f.label :select_cars_from_list %><br>
    <% @cars.each do |car| %>
      <div class="checkbox">
        <label>
          <input name="event[car_ids][]" type="checkbox" value="<%=car.id%>">
          <%=car.model %>
        </label>
      </div>
    <% end %>
   </div>

  <div>
    <%= f.label :select_places_from_list %><br>
    <% @places.all.each do |place| %>
      <div class="checkbox">
        <label>
          <input name="event[place_ids][]" type="checkbox" value="<%=place.id%>">
          <%= place.city %>,
          <%= place.address %>
        </label>
      </div>
    <% end %>
  </div>

  <div class="form-submit">
    <%= f.button :submit %>
  </div>
<% end %>

